{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Frontend and Backend",
            "configurations": [
                "Launch Frontend",
                "Launch Backend"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Launch Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Backend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ], // Adjust based on your backend entry file
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal"
        }
    ]
}